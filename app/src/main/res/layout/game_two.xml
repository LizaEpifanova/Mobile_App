<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".game_two">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#410FA3"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingTop="16dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#410FA3"
            android:src="@drawable/vector" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/fredoka_medium"
            android:gravity="start"
            android:paddingRight="64dp"
            android:text="Word practice"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="normal" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/fredoka_bold"
            android:gravity="center"
            android:text="gardener"
            android:textFontWeight="400"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/trans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="[ 'gɑ:dnə ]"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:fontFamily="@font/fredoka_regular" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/first_btn_1"
            android:layout_width="384dp"
            android:layout_height="56dp"
            android:layout_marginTop="35dp"
            android:backgroundTint="#E5E5E5"
            android:background="@drawable/for_button"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/fredoka_medium"
            android:text="Муха"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/first_btn_2"
            android:layout_width="384dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#E5E5E5"
            android:background="@drawable/for_button"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/fredoka_medium"
            android:text="Садовник"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/first_btn_3"
            android:layout_width="384dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="#E5E5E5"
            android:background="@drawable/for_button"
            android:fontFamily="@font/fredoka_medium"
            android:text="Гладиолус"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/first_btn_4"
            android:layout_width="384dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:backgroundTint="#E5E5E5"
            android:background="@drawable/for_button"
            android:fontFamily="@font/fredoka_medium"
            android:text="Собака"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/choosebtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:layout_margin="24dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/for_button"
            android:backgroundTint="#5B7BFE"
            android:fontFamily="@font/fredoka_medium"
            android:text="Check"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/for_button"
            android:backgroundTint="@color/butt"
            android:fontFamily="@font/fredoka_medium"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="Next"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>