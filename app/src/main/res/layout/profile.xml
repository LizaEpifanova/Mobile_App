<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile">
    

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#410FA3"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:paddingEnd="24dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded"
                android:paddingStart="24dp"

                android:paddingTop="16dp">


            </LinearLayout>

            <TextView
                android:id="@+id/profiletv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your profile, Emil"
                android:textColor="@color/white"
                android:fontFamily="@font/fredoka_medium"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- Основное содержимое -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- Разделитель -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/switch_theme"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="220dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/for_button"
                android:backgroundTint="@color/butt"
                android:text="Switch_theme"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:fontFamily="@font/fredoka_medium" />

            <!-- Кнопка: Сменить язык -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change_language"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/for_button"
                android:backgroundTint="@color/butt"
                android:text="Change mother language"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:fontFamily="@font/fredoka_medium" />

            <!-- Кнопка: Сменить изображение -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change_image"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/for_button"
                android:backgroundTint="@color/butt"
                android:text="Change your image"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:fontFamily="@font/fredoka_medium" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Logout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/for_button"
                android:backgroundTint="#E5E5E5"
                android:text="Logout"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:fontFamily="@font/fredoka_medium" />

        </LinearLayout>

</LinearLayout>