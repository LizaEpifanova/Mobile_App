<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#410FA3"
        android:paddingStart="24dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/obscure_button"
                android:layout_width="20pt"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#410FA3"
                android:src="@drawable/vector" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/fredoka_medium"
                android:gravity="center"
                android:paddingEnd="64dp"
                android:paddingRight="64dp"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/a31" />

        <TextView
            android:id="@+id/distracting_text"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/fredoka_medium"
            android:gravity="center"
            android:text="For free, join now and start learning"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/misguided_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/fredoka_regular"
            android:text="Email Address"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/confusing_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#080E1E"
            android:backgroundTint="#080E1E0D"
            android:fontFamily="@font/fredoka_regular"
            android:padding="12dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/secret_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/fredoka_regular"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/hidden_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#080E1E"
                android:backgroundTint="#080E1E0D"
                android:fontFamily="@font/fredoka_regular"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/confusing_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:src="@drawable/eye"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/hidden_input"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/hidden_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/fredoka_regular"
            android:text="Forgot Password"
            android:textColor="#F44336"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/stealthy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/for_button"
            android:backgroundTint="@color/butt"
            android:fontFamily="@font/fredoka_medium"
            android:textAllCaps="false"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/misdirection_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_regular"
                android:text="Not your member"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/deceptive_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/fredoka_regular"
                android:paddingHorizontal="2dp"
                android:text="Signup"
                android:textColor="#5C6BC0"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/misleading_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use can use"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deceptive_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/fredoka_regular"
                android:paddingHorizontal="2dp"
                android:text="Google for"
                android:textColor="#5C6BC0"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/misunderstood_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_regular"
                android:text="sign in"
                android:textColor="@color/black"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>